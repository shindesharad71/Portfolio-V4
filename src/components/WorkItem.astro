---
const { item } = Astro.props;
---
<div class="portfolio-item">
    <div class="portfolio-item--inner">
        <img height="350" width="350" src={item.image} alt={item.title}>
    </div>
    <div class="portfolio-item--text">
        <strong>{item.title}</strong>
        <p>{item.description}</p>
        {item.link &&
            <a href={item.link} target="_blank" rel="noopener noreferrer">View</a>
        }
        {item.info &&
            <i>{item.info}</i>
        }
    </div>
</div>
<style lang="scss">
.portfolio-item {
    padding: 10px;
    background: #efefef;
    margin: 5px;
    position: relative;
    &:hover {
        .portfolio-item--text {
            visibility: visible;
            opacity: 1;
        }
    }
    img {
        max-width: 100%;
        display: block;
    }
    &--text {
        position: absolute;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,.4);
        top: 0;
        left: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        visibility: hidden;
        opacity: 0;
        transition: opacity .3s;
        text-align: center;
        p {
            padding: 0 32px;
        }
        a {
            background: #fff;
            padding: 10px 20px;
            margin: 5px;
            position: relative;
            border-radius: 5px;
            color: var(--color-orange);
            border: 0;
            outline: none;
            cursor: pointer;
            text-decoration: none;
        }
    }
}
</style>