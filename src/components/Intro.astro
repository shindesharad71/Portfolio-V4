---
const currentDate = new Date();
const currentYear = currentDate.getFullYear();
const currentMonth = currentDate.getMonth() + 1;
let years = currentYear - 2017;
let months = currentMonth - 11;

if (months < 0) {
    years--;
    months += 12;
}

const title = `Hi! I'm Sharad - Staff Engineer`;
const subTitle = `${years}+ years of building scalable systems & solving complex problems 🧑‍💻`;
const description = `Staff Engineer at HighLevel, specializing in backend architecture, microservices, and system design. Based in Pune, India 🇮🇳. Passionate about writing clean code, mentoring developers, and building products that scale to millions of users. When I'm not architecting systems, you'll find me exploring new tech, listening to podcasts 🎧, or contributing to open source 💻.`;

---
<section class="section">
    <h1 data-aos="zoom-out">{title}&nbsp;<img height="50" width="50" src="/assets/hi.gif" alt="Hi" loading="eager"></h1>
    <strong class="sub-title">{subTitle}</strong>
    <p>{description}</p>
</section>
<style lang="scss">
.sub-title {
    font-size: 2rem;
}
</style>
