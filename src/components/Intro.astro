---
const currentDate = new Date();
const currentYear = currentDate.getFullYear();
const currentMonth = currentDate.getMonth() + 1;
let years = currentYear - 2017;
let months = currentMonth - 11;

if (months < 0) {
    years--;
    months += 12;
}

const title = `Hi! I'm Sharad - Software Engineer`;
const subTitle = `${years}+ years of coding (and debugging) experience 🧑‍💻`;
const description = `Born and raised in India 🇮🇳, now coding my heart out in Pune, MH. When I'm not crafting software solutions, you'll find me exploring the world 🌍, jamming to podcasts 🎧, or deep into an epic series binge 📺. Oh, and yes, my code has fewer bugs than your average sitcom!`;

---
<section class="section">
    <h1 data-aos="zoom-out">{title}&nbsp;<img height="50" width="50" src="/assets/hi.gif" alt="Hi"></h1>
    <strong class="sub-title">{subTitle}</strong>
    <p>{description}</p>
</section>
<style lang="scss">
.sub-title {
    font-size: 2rem;
}
</style>
